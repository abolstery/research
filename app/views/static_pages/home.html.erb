<% if signed_in? %>
  <div class="row">
    <aside>
      <div id='buttons'>
        <button id='conference'><%= render 'shared/user_info' %>Create conference</button>
        <button id='rider'><%= render 'shared/conference_form' %>Find a ride!</button>
      </div>
    </aside>
  </div>
<% else %>
  <div style="margin-top:100px">
    <%= link_to "Sign up now!", signup_path,
                                class: "button" %>
  </div>
<% end %>
